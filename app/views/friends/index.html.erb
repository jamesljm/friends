<h1>Friends</h1>

<table class="table table-hover">
    <tr>
        <th>FRIENDS (<%= @friends.count %>)</th>
        <th>FOLLOWING (<%= @followings.count %>)</th>
        <th>FOLLOWED (<%= @followeds.count %>)</th>
    </tr>
    <tr>
        <td>
        <% @friends.each do |friend| %>
            <div><%= friend.name %></div>
            <div><%= link_to "See friend's page", user_friend_path(:user_id => current_user.id, :id => friend.id) %></div>
            <div><%= link_to "Unfollow", user_friend_path(:user_id=>current_user, :id=>friend), method: :Delete %></div>
            </br>
        <% end %>
        </td>

        <td>
        <% @followings.each do |following| %>
            <div><%= following.name %></div>
            <div><%= link_to "Unfollow", user_friend_path(:user_id=>current_user, :id=>following), method: :Delete %></div>
            </br>
        <% end %>
        </td>

        <td>
        <% @followeds.each do |followed| %>
            <div><%= followed.name %></div>
            <%= link_to "Follow back", user_friends_path(followed), method: :Post %>
            </br>
        <% end %>
        </td>
    </tr>

</table>