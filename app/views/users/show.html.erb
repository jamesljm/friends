<h1><%= "Hello #{@user.name}. Welcome to your profile." %></h1>

<div><%#= link_to "Your Friends", some_path %></p>
<div><%= link_to "Edit", edit_user_path(current_user), remote: true %></div>

<div id="edit-user">
    <table>
        <tr>
            <th>Username:</th>
            <td><%= @user.name %></td>
        </tr>
        <tr>
            <th>Email:</th>
            <td><%= @user.email %></td>
        </tr>
        <tr>
            <th>Phone:</th>
            <td><%= @user.phone %></td>
        </tr>
        <tr>
            <th>Address:</th>
            <td><%= @user.address %></td>
        </tr>
        <% if current_user.admin? %>
            <tr>
                <th>Status:</th>
                <td><%= @user.status %></td>
            </tr>
        <% end %>
    </table>
        <if current_user.address >
            <iframe  width="300" height="225" frameborder="0" style="border:0" src="<%= @endpoint%>" allowfullscreen></iframe>
        </end>
</div>

<% if current_user.admin? %>
    <div><%= link_to "See all members", users_path %></div>
<% end %>